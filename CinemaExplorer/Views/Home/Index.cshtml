@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron" id="top">        
        <h1>Cinema Explorer</h1>
        <div class="covidInfo">
            <h4>COVID-19 INFO:</h4>
            <h5>THE MAJORITY OF CINEMAS / MOVIE THEATERS AROUND THE GLOBE AND IN CANADA ARE CURRENTLY CLOSED DUE TO THE CORONOVIRUS.<br />AS A RESULT OUR APIS REQUESTS MAY NOT RETURN CORRECT INFORMATION.</h5>
        </div>
    </div>

<div class="row">
    <div class="col-md-12">
        <div>
            <h2 id="userLocation">Your Location:</h2>            
        </div>        
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <label>Find cinemas in range</label>
            <select id="range">
                <option value="50" selected>50</option>
                <option value="100">100</option>
                <option value="500">500</option>
                <option value="1000">1000</option>
                <option value="2500">2500</option>
                <option value="5000">5000</option>
            </select>
            <span>km</span>
        </div>
        <div class="col-md-4"><label for="route">Show direction</label>&nbsp;<input id="route" type="checkbox" /></div>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <div>
            <h2>Cinemas (<span id="counter"></span>)</h2>
        </div>
        
        <div id="cinemaList" style="overflow-y: scroll; height:600px;"></div>
    </div>
    <div class="col-md-8">
        <h2>Map</h2>
        <div id="map"></div>
    </div>
</div>
